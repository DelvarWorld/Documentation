include ../includes/header
#wrapper
    include ../includes/banner

    .whats-new-banner
        h1= 'Classes'

    .horizontal-separator

    #versionsList
        - for version in versions
            if version == currentVersion
                a(href='./'+version)#version.selectedVersion= 'v'+version
            else
                a(href='./'+version)#version= 'v'+version

    .sorts
        span#orderByTags.order Tags
        span#orderByAlpha.order.selectedOrder A - Z

    #classes_classesListByAlpha
        - for className in classesByAlpha
            a(href!='./'+currentVersion+'/'+className)= className.replace('_T_','<T>')

    //List the classes categories
    #classes_classesListByTag.hidden
        each bclasses, categorie in classesByTags
            div.category
                div.categoryTitle
                    h3= categorie
                div.categoryList
                    //List the classes of a category
                    each bclass in bclasses
                        li
                            a(href='./'+currentVersion+'/'+bclass)= bclass

include ../includes/footer

script(src="/js/classes.js")